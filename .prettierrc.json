{
    "printWidth": 80,
    "tabWidth": 4,
    "singleQuote": true,
    "semi": true,
    "trailingComma": "none",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "always",
    "endOfLine": "lf",
    "overrides": [
        {
            "files": ["*.json", "*.md", "*.markdown", "*.yml", "*.yaml"],
            "options": {
                "printWidth": 100
            }
        }
    ]
}
